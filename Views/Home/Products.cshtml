            <!-- Shop
            ============================================= -->

            <div id="shop" class="shop row gutter-30 col-mb-30 mt-3"> 
                @foreach (var i in images)
                {
                    <div class="product col-lg-3 col-md-4 col-sm-6 col-12">
                        <div class="grid-inner">
                            <div class="product-image">
                                <a><img src="@i.ImgPath@i.ImgName"></a>
                                <div class="bg-overlay">
                                    <div class="bg-overlay-content align-items-end justify-content-between" data-hover-animate="fadeIn" data-hover-speed="400">
                                        <a onclick="openDialogue('@i.EncodedImgPath@i.ImgName')" data-toggle="modal" data-target="#modal" class="btn btn-light me-2"><i class="icon-line-shopping-cart"></i></a>
                                    </div>
                                </div>
                            </div>
                            <div class="product-desc">
                                <div class="product-title mb-0"><h4 class="mb-0"><a class="fw-medium">@i.CurtainType</a></h4></div>
                            </div>
                        </div>
                    </div>
                }
            </div>
